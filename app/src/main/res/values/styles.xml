<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- No Action Bar theme -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- Dark theme with no action bar -->
    <style name="AppTheme.Dark.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- Light theme with no action bar (alias for existing style) -->
    <style name="AppTheme.Light.NoActionBar" parent="AppTheme.NoActionBar" />

</resources>