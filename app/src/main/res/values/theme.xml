<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.NoBackground" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@null</item>
    </style>
    
    <style name="Theme.NewsRob_Light_Normal" parent="@android:style/Theme.Light">
      <item name="com.graze16:startColor">#123</item>
      <item name="com.graze16:endColor">#456</item>
      <item name="com.graze16:lightTextColor">#fff</item>
      <item name="com.graze16:articleHeaderTextColor">#333</item>
      <item name="com.graze16:articleSnippetTextColor">#777</item>
      <item name="com.graze16:feedTitleTextColor">#777</item>
      <item name="com.graze16:sharedByTextColor">#777</item>
      <item name="com.graze16:dividerColor">#bbb</item>
      <item name="com.graze16:controlPanelDividerColor">#bbb</item>
      <item name="com.graze16:controlPanelBottomDividerColor">#0f00</item>
      <item name="webViewBackgroundColorLight">#fff</item>
      <item name="com.graze16:countBackground">@com.graze16:drawable/count_background</item>
    </style>
    
    <style name="Theme.NewsRob_Dark_Normal" parent="@android:style/Theme.Black">
      <item name="com.graze16:startColor">#789</item>
      <item name="com.graze16:endColor">#0ab</item>
      <item name="com.graze16:lightTextColor">#999</item>
      <item name="com.graze16:articleHeaderTextColor">#999</item>
      <item name="com.graze16:articleSnippetTextColor">#777</item>
      <item name="com.graze16:feedTitleTextColor">#777</item>
      <item name="com.graze16:sharedByTextColor">#777</item>
      <item name="webViewBackgroundColorLight">#bbb</item>
      <item name="com.graze16:dividerColor">#333</item>
      <item name="com.graze16:controlPanelDividerColor">#999</item>
      <item name="com.graze16:controlPanelBottomDividerColor">#0999</item>
      <item name="com.graze16:countBackground">@com.graze16:drawable/count_background_dark</item>
    </style>
    
    <style name="TitleBarSeparator">
      <item name="android:layout_width">1px</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:background">?com.graze16:controlPanelDividerColor</item> <!--  TODO  -->
    </style>
    
    <style name="ControlPanelSeparator">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">1px</item>
      <item name="android:background">?com.graze16:controlPanelBottomDividerColor</item> <!--  TODO  -->
    </style>
    
    <style name="TitleBarText" parent="@android:style/TextAppearance.Medium">
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:layout_weight">0</item>
      <item name="android:gravity">center_vertical</item>
      <item name="android:paddingLeft">8dp</item>
      <item name="android:paddingRight">8dp</item>
      <item name="android:textStyle">bold</item>
      <item name="android:singleLine">true</item>
      <item name="android:ellipsize">end</item>
    </style>
       
    <style name="TitleBar">
      <item name="android:id">@id/title_container</item>
      <item name="android:layout_width">fill_parent</item>
      <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="TitleBarAction">
      <item name="android:paddingTop">2dp</item>
      <item name="android:paddingBottom">2dp</item>
      <item name="android:paddingRight">3dp</item>
      <item name="android:paddingLeft">3dp</item>
      
      <item name="android:layout_weight">0</item>
      <item name="android:background">@drawable/title_button</item>
    </style>

    <style name="CustomToolBar" parent="ThemeOverlay.AppCompat.Light">
<!--        <item name="colorPrimary">@drawable/list_header_background</item>-->
<!--        <item name="colorPrimaryDark">@drawable/list_header_background_dark</item>-->
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item> <!-- sets the color for the back arrow -->
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item> <!-- sets the style for the overflow button -->
    </style>
    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="OverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>
    
    <!-- Settings Activity Themes that show proper action bar -->
    <style name="AppTheme.Settings.Light" parent="Theme.NewsRob_Light_Normal">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>
    
    <style name="AppTheme.Settings.Dark" parent="Theme.NewsRob_Dark_Normal">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>
    
    
</resources>